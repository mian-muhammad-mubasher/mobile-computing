<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pk.edu.pucit.mc.menudemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pk.edu.pucit.mc.menudemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pk.edu.pucit.mc.menudemo.BasicMenuActivity"
            android:label="@string/title_activity_basic_menu" >
        </activity>
        <activity
            android:name="pk.edu.pucit.mc.menudemo.DynamicMenuActivity"
            android:label="@string/title_activity_dynamic_menu" >
        </activity>
        <activity
            android:name="pk.edu.pucit.mc.menudemo.ContextMenuActivity"
            android:label="@string/title_activity_context_menu" >
        </activity>
    </application>

</manifest>