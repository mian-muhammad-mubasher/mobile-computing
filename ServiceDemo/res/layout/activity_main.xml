<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >
	
	<Button 
	    android:text="@string/label_button_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="onClick"
	    android:id="@+id/my_downloader_intent_service_button"
	    />
	
	<Button 
	    android:text="@string/label_button_2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="onClick"
	    android:id="@+id/my_downloader_service_button"
	    />
	
	<Button 
	    android:text="@string/label_button_3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="useBoundService"
	    />
	
	<Button 
	    android:text="@string/label_button_4"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="onClickClear"
	    />
		
	<TextView
	    android:id="@+id/my_text_view" 
	   	android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textIsSelectable="true"
	    />

</LinearLayout>